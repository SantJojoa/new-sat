generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model areas {
  id              String         @id @default(cuid())
  name            String         @unique
  subdireccion_id String
  created_at      DateTime       @default(now())
  updated_at      DateTime       @updatedAt
  subdirecciones  subdirecciones @relation(fields: [subdireccion_id], references: [id])
  users           users[]
}

model subdirecciones {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  areas       areas[]
}

model user_types {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  users       users[]
}

model users {
  id           String     @id @default(cuid())
  username     String     @unique
  password     String
  user_type_id String
  names        String
  last_name    String
  num_id       String     @unique
  area_id      String?
  charge       String?
  email        String     @unique
  is_active    Boolean    @default(true)
  created_at   DateTime   @default(now())
  updated_at   DateTime   @updatedAt
  areas        areas?     @relation(fields: [area_id], references: [id])
  user_types   user_types @relation(fields: [user_type_id], references: [id])
}
